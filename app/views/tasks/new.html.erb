<h1>タスクの新規登録</h1>
<% if @task.errors.any? %>
  <div id = "error_explanation">
    <h5><%= pluralize(@task.errors.count,"error") %> prohibited this <%= @task %> from being saved:</h2>
    <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with( model: @task, local: true ) do |f| %>
  
  <%= f.label :task_name, "タスク名" %> <br>
  <%= f.text_field :task_name %> <br>
  <%= f.label :content, "内容" %> <br>
  <%= f.text_area :content %> <br>
  <%= f.label :status, "ステータス" %> <br>
  <%= f.select :status, ["未着手", "着手中", "完了"] %> <br>
  <%= f.label :priority, "優先度" %> <br>
  <%= f.select :priority, ["低", "中", "高"] %> <br>
  <%= f.label :deadline, "期限" %> <br>
  <%= f.datetime_select :deadline %> <br>
  <%= f.label :label_ids, "ラベル"%>
  <%= f.collection_check_boxes :label_ids, Label.all, :id, :label_name %>
  <%= f.submit "登録する" %>
<% end %>