<h1>タスク一覧</h1>

<table>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
    <th>投稿日時</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td> <%= task.task_name %> </td>
    <td> <%= task.content %> </td>
    <td> <%= task.created_at.year %>年<%= task.created_at.month %>月<%= task.created_at.day %>日　<%= task.created_at.hour %>:<%= task.created_at.min %> </td>
    <td> <%= link_to "詳細", task_path(task.id) %> </td>
    <td> <%= link_to "編集", edit_task_path(task.id) %> </td>
    <td> <%= link_to "削除", task_path(task.id), method: :delete, data: {confirm: "削除しますか？"} %> </td>
  </tr>
  <% end %>
</table>