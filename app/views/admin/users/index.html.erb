<h1>管理者メニュー ユーザー一覧</h1>

<table>
  <tr>
    <th>ユーザー名</th>
    <th>タスク数</th>
  </tr>
<% @users.each do |u| %>
  <tr>
    <td><%= u.name %></td>
    <td><%= u.tasks.count %></td>
    <td><%= link_to("詳細", admin_user_path(u.id)) %></td>
    <td><%= link_to("編集", edit_admin_user_path(u.id)) %></td>
    <td><%= link_to("削除", admin_user_path(u.id), method: :delete) %></td>
  </tr>
<% end %>
</table>

